<h2 class="text-2xl font-bold text-white mb-4">
  Teams with theme "<%= theme %>"
</h2>
<% if (teams.length > 0) { %>
<article class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% teams.forEach(team => { %>
  <div class="bg-zinc-800 text-white rounded-md shadow-md py-4 px-6">
    <a href="/teams/<%= team.id %>">
      <h3 class="text-xl font-bold mb-2"><%= team.name %></h3>
    </a>
  </div>
  <% }) %>
</article>
<% } else { %>
<p class="text-gray-600 text-center mt-4">
  No teams found with theme "<%= theme %>".
</p>
<% } %>
