<div class="container mx-auto px-4 py-8 sm:px-6 lg:px-8">
  <h1 class="text-4xl font-bold mb-4 text-white"><%= team.name %></h1>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <div class="bg-zinc-800 rounded-md shadow-md px-4 py-4 mb-4">
        <p class="text-white">
          <span class="font-bold">ID:</span> <%= team.id %>
        </p>
        <p class="text-white">
          <span class="font-bold">Theme:</span> <%= team.theme %>
        </p>
      </div>
      <div class="bg-zinc-800 rounded-md shadow-md px-4 py-4">
        <h2 class="text-lg font-bold mb-4">Members</h2>
        <% if (team.members.length > 0) { %> <% team.members.forEach(member => {
        %>
        <p class="text-white"><%= member.name %></p>
        <% }) %> <% } else { %>
        <p class="text-white">No members found.</p>
        <% } %>
      </div>
    </div>
    <div>
      <form
        action="/teams/<%= team.id %>/update"
        method="POST"
        class="bg-zinc-800 rounded-md shadow-md px-4 py-4"
      >
        <input type="hidden" name="_method" value="PUT" />
        <h2 class="text-lg font-bold mb-4 text-white">Enter Team Score</h2>
        <div class="mb-4">
          <label for="idea" class="text-white">Idea (20):</label>
          <input
            type="number"
            id="idea"
            name="idea"
            min="0"
            max="20"
            class="w-full px-4 py-2 rounded-lg border border-zinc-400 text-white bg-zinc-800"
          />
        </div>
        <div class="mb-4">
          <label for="technology" class="text-white">Technology (20):</label>
          <input
            type="number"
            id="technology"
            name="technology"
            min="0"
            max="20"
            class="w-full px-4 py-2 rounded-lg border border-zinc-400 text-white bg-zinc-800"
          />
        </div>
        <div class="mb-4">
          <label for="implementation" class="text-white"
            >Implementation (30):</label
          >
          <input
            type="number"
            id="implementation"
            name="implementation"
            min="0"
            max="30"
            class="w-full px-4 py-2 rounded-lg border border-zinc-400 text-white bg-zinc-800"
          />
        </div>
        <div class="mb-4">
          <label for="relevance" class="text-white"
            >Relevance to theme (10):</label
          >
          <input
            type="number"
            id="relevance"
            name="relevance"
            min="0"
            max="10"
            class="w-full px-4 py-2 rounded-lg border border-zinc-400 text-white bg-zinc-800"
          />
        </div>
        <div class="mb-4">
          <label for="qa" class="text-white">Q&A (20):</label>
          <input
            type="number"
            id="qa"
            name="qa"
            min="0"
            max="20"
            class="w-full px-4 py-2 rounded-lg border border-zinc-400 text-white bg-zinc-800"
          />
        </div>
        <div class="mb-4">
          <label for="notes" class="text-white">Notes:</label>
          <textarea
            id="notes"
            name="notes"
            rows="8"
            class="w-full px-4 py-2 rounded-lg border text-white bg-zinc-800"
          ></textarea>
        </div>
        <button
          type="submit"
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full focus:outline-none focus:shadow-outline-blue"
        >
          Submit
        </button>
      </form>
    </div>
  </div>
</div>
